<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="monocular_camera_macro" params="suffix parent namespace x y z roll pitch yaw fps width height fov">

    <!-- 1. Tạo Link Camera (Khung vỏ camera) -->
    <link name="${suffix}_link">
      <visual>
        <geometry>
          <box size="0.05 0.05 0.05"/>
        </geometry>
        <material name="red">
          <color rgba="1 0 0 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.05 0.05 0.05"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.1"/>
        <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
      </inertial>
    </link>

    <!-- 2. Tạo Khớp nối (Gắn camera vào xe) -->
    <joint name="${suffix}_joint" type="fixed">
      <parent link="${parent}"/>
      <child link="${suffix}_link"/>
      <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}"/>
    </joint>

    <!-- 3. Tạo Optical Frame (Quan trọng cho OpenCV) -->
    <!-- Camera trong ROS nhìn theo trục Z, còn xe nhìn trục X. Cần khớp quay này -->
    <link name="${suffix}_optical_frame"/>
    <joint name="${suffix}_optical_joint" type="fixed">
      <parent link="${suffix}_link"/>
      <child link="${suffix}_optical_frame"/>
      <origin xyz="0 0 0" rpy="-1.570796 0 -1.570796"/>
    </joint>

    <!-- 4. Cấu hình Sensor cho Gazebo Harmonic -->
    <gazebo reference="${suffix}_link">
      <sensor name="${suffix}_sensor" type="camera">
        <pose>0 0 0 0 0 0</pose>
        <visualize>true</visualize> <!-- Hiện tia camera trong Gazebo để debug -->
        <update_rate>${fps}</update_rate>
        <topic>camera/image_raw</topic> <!-- Topic gốc trong Gazebo -->
        
        <camera>
          <horizontal_fov>${fov}</horizontal_fov>
          <image>
            <width>${width}</width>
            <height>${height}</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
      </sensor>
    </gazebo>

  </xacro:macro>
</robot>